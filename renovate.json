{
  "extends": [
    "config:base"
  ],
  "pinDigests": true,
  "dependencyDashboard": true,
  "regexManagers": [
    {
      "fileMatch": [
        "^.github/workflows/main.yml$"
      ],
      "matchStrings": [
        "version: (?<currentValue>.*?)\n"
      ],
      "depNameTemplate": "golangci/golangci-lint",
      "datasourceTemplate": "github-tags"
    }
  ]
}