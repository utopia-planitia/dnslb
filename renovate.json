{
  "extends": [
      "config:base"
  ],
  "pinDigests": true,
  "postUpdateOptions": [
      "gomodTidy",
      "gomodUpdateImportPaths"
  ],
  "prHourlyLimit": 0,
  "labels": [
      "renovate-bot"
  ],
  "automerge": true,
  "automergeType": "pr",
  "kubernetes": {
      "fileMatch": [
          "\\.yaml$"
      ]
  },
  "packageRules": [
      {
          "matchPackageNames": [
              "ghcr.io/utopia-planitia/dnslb"
          ],
          "enabled": false,
          "pinDigests": false
      }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^.github/workflows/linting.yml$"
      ],
      "matchStrings": [
        "version: (?<currentValue>.*?)\n"
      ],
      "depNameTemplate": "golangci/golangci-lint",
      "datasourceTemplate": "github-tags"
    }
  ]
}