{
  "extends": [
    "config:base"
  ],
  "pinDigests": true,
  "dependencyDashboard": true,
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^.github/workflows/main.yml$"
      ],
      "matchStrings": [
        "version: (?<currentValue>.*?)\n"
      ],
      "depNameTemplate": "golangci/golangci-lint",
      "datasourceTemplate": "github-tags"
    }
  ]
}